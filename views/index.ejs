<!DOCTYPE html>
<html>
<head>
    <title>Media Library Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4 mb-4">Media Library Manager</h1>

        <!-- Control Panel -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Control Panel</h5>
                <form onsubmit="startScan(event)" class="row g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="split_dirs" name="split_dirs" value="true">
                            <label class="form-check-label" for="split_dirs">Split Anime</label>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="force" name="force" value="true">
                            <label class="form-check-label" for="force">Force Update</label>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary" <%= taskStatus.running ? 'disabled' : '' %>>
                            Start Scan
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Settings Info -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Settings</h5>
                <p><strong>Source Directory:</strong> <%= settings.src_dir %></p>
                <p><strong>Destination Directory:</strong> <%= settings.dest_dir %></p>
            </div>
        </div>

        <!-- Media Sections -->
        <div class="media-section">
            <h2>TV Shows</h2>
            <% media.shows.forEach(show => { %>
                <div class="show-item">
                    <h4><%= show.name %></h4>
                    <div class="seasons-list">
                        <% show.seasons.forEach(season => { %>
                            <div class="season-item">
                                <%= season %>
                                <div class="btn-group float-end">
                                    <button class="btn btn-sm btn-info" 
                                            onclick="moveSymlink('<%= show.path %>/<%= season %>', 'anime_shows')">
                                        Move to Anime
                                    </button>
                                    <button class="btn btn-sm btn-danger" 
                                            onclick="deleteSymlink('<%= show.path %>/<%= season %>')">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="media-section">
            <h2>Anime Shows</h2>
            <% media.anime_shows.forEach(show => { %>
                <div class="show-item">
                    <h4><%= show.name %></h4>
                    <div class="seasons-list">
                        <% show.seasons.forEach(season => { %>
                            <div class="season-item">
                                <%= season %>
                                <div class="btn-group float-end">
                                    <button class="btn btn-sm btn-info" 
                                            onclick="moveSymlink('<%= show.path %>/<%= season %>', 'shows')">
                                        Move to Shows
                                    </button>
                                    <button class="btn btn-sm btn-danger" 
                                            onclick="deleteSymlink('<%= show.path %>/<%= season %>')">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="media-section">
            <h2>Movies</h2>
            <% media.movies.forEach(movie => { %>
                <div class="movie-item">
                    <%= movie.name %>
                    <button class="btn btn-sm btn-danger float-end" 
                            onclick="deleteSymlink('<%= movie.path %>')">
                        Delete
                    </button>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Status Box -->
    <div class="status-box" id="statusBox" style="<%= !taskStatus.running ? 'display: none;' : '' %>">
        <h6>Status</h6>
        <div id="statusMessages">
            <% if (taskStatus.messages && taskStatus.messages.length > 0) { %>
                <% taskStatus.messages.forEach(message => { %>
                    <div><%= message %></div>
                <% }); %>
            <% } else { %>
                <div>No active tasks</div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html> 